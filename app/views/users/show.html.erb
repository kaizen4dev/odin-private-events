<h2>Events created by <%= @user.email %></h2>

<h3>Upcoming</h3>
<%= render(partial: "shared/event_cards", collection: @user.created_events.upcoming, as: :event) ||
  render(inline: "<p>User has no created events.</p>")%>

<h3>Passed</h3>
<%= render(partial: "shared/event_cards", collection: @user.created_events.past, as: :event) ||
  render(inline: "<p>User has no created events.</p>")%>

<h2>Events attended by <%= @user.email %></h2>

<h3>Upcoming</h3>
<%= render(partial: "shared/event_cards", collection: @user.attended_events.upcoming, as: :event) ||
  render(inline: "<p>You aren't attending any events.</p>") %>

<h3>Passed</h3>
<%= render(partial: "shared/event_cards", collection: @user.attended_events.past, as: :event) ||
  render(inline: "<p>You aren't attending any events.</p>") %>
